{
  "name": "stmx-token",
  "version": "0.0.1",
  "description": "StormX ERC-20 STMX token.",
  "main": "index.js",
  "scripts": {
    "cleanup": "rm -rf artifacts/ cache/ coverage/ types/ typechain/",
    "compile": "hardhat compile",
    "coverage": "RUNNING_COVERAGE=1 hardhat coverage",
    "generate-types": "npx hardhat typechain",
    "prettier": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "postinstall": "npx hardhat compile && npm run generate-types",
    "test": "hardhat test",
    "deploy:goerli": "hardhat run --network goerli  scripts/deploy.ts",
    "deploy:sepolia": "hardhat run --network sepolia  scripts/deploy.ts",
    "deploy:arbitrumSepolia": "hardhat run --network arbitrumSepolia",
    "deploy:mainnet": "hardhat run --network mainnet  scripts/deploy.ts",
    "verify:goerli": "hardhat verify --network goerli",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:arbitrumSepolia": "hardhat verify --network arbitrumSepolia",
    "verify:mainnet": "hardhat verify --network mainnet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stormx/stmx-token.git"
  },
  "author": "StormX Engineering",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stormx/stmx-token/issues"
  },
  "homepage": "https://github.com/stormx/stormx/stmx-token#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^3.0.1",
    "@typechain/ethers-v5": "^11.1.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.2",
    "chai": "^4.3.10",
    "dotenv-extended": "^2.9.0",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^6.9.1",
    "hardhat": "^2.17.3",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@typechain/ethers-v6": "^0.5.0"
  }
}
